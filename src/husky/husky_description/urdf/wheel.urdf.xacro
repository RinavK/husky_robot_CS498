<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="husky_wheel">
  <xacro:macro name="husky_wheel" params="wheel_prefix *joint_pose">
    <link name="${wheel_prefix}_wheel">
      <inertial>
        <mass value="2.637" />
        <origin xyz="0 0 0" />
        <inertia  ixx="0.02467" ixy="0" ixz="0" iyy="0.04411" iyz="0" izz="0.02467" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://husky_description/meshes/wheel.dae" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="${M_PI/2} 0 0" />
        <geometry>
          <cylinder length="${wheel_length}" radius="${wheel_radius}" />
        </geometry>
      </collision>
    </link>
    
    <!-- Ignition Gazebo wheel friction properties -->
    <gazebo reference="${wheel_prefix}_wheel">
      <mu1>1.0</mu1>
      <mu2>0.5</mu2>
      <kp>10000000.0</kp>
      <kd>1.0</kd>
      <fdir1>1 0 0</fdir1>
      <minDepth>0.001</minDepth>
      <maxVel>0.1</maxVel>
    </gazebo>
    
    <joint name="${wheel_prefix}_wheel_joint" type="continuous">
      <parent link="base_link"/>
      <child link="${wheel_prefix}_wheel"/>
      <xacro:insert_block name="joint_pose"/>
      <axis xyz="0 1 0" rpy="0 0 0" />
    </joint>
  </xacro:macro>
</robot>